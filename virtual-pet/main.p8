__lua__
-- virtual pet

#include message.p8
#include particles.p8
#include timer.p8
#include scene.p8


idea = text_scene:new({},
    {"virtual pet game?",
     "by ryland and shane?"})


our_credits = credits:new({
        text = "by ryland and shane"})

idea.next_scene = our_credits

curr_scene = idea
-- curr_scene = credits

function _init()
 prev_time = time()
 curr_scene:enter()
end

function _update()
 if curr_scene.text == nil then
	update_time()
	coroutines:update()
 end
 local next = curr_scene:update()
 if next ~= nil then
  curr_scene:exit()
  curr_scene = next
  curr_scene:enter()
 end
end

function _draw()
 curr_scene:draw()
end

