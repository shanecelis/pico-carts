-- at some point.
function _init()
  cls(4)
  t = 0
  x = rnd(127)
  y = rnd(127)
  dx = flr(rnd(3)) - 1
  dy = flr(rnd(3)) - 1
  c = rnd(16)
end

function _draw()
  t += 1
  x += dx
  y += dy
  pset(x,y,c)
  if rnd() < 0.5 then
  dx = flr(rnd(3)) - 1
  end
  if rnd() < 0.4 then
  dy = flr(rnd(3)) - 1
  end
  if rnd() < 0.2 then
    c = rnd({3,14})
--  c += flr(rnd(3)) - 1
  end
  if rnd() < 0.01 then
    x = rnd(127)
    y = rnd(127)
  end
  if rnd() < 0.001 then
    cls(rnd(16))
  end
end
