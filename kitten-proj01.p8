function _draw()
cls()
spr(1+0.1*t%3,x,y,1,1,flipper  )
end

function _update()

  if btn (1) then
    x=x+1
    t=t+1
  end
  if btn (0) then
    x=x-1
    t=t-1
  end
  if btn (2) then
    y=y-1
    t=t-1
  end
  if btn (3) then
    y=y+1
    t=t+1
  end
end
